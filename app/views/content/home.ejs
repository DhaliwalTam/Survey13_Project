<!-- Main home page of website -->
<% if(!displayName) { %>
    <div class="container" id="homeNotLogIn">
        <div id="home-survey-contained">
            <div id="boxIt">
                <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/content/Survey13-images/img-01.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-02.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-03.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-04.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-05.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-06.jpg">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/content/Survey13-images/img-07.jpg">
                        </div>
                    </div>
                </div>
            </div>

            <div id="home-survey-box">
                <h1>Welcome to Survey13!</h1>
                <h2 id="getStarted">Get started by clicking any of the links below!</h2>
                <h6>
                    <div class="home-survey-button">
                        <a href="/login">Create a survey!</a>
                    </div>
                    <div class="home-survey-button">
                        <a href="/surveys/list">View available surveys!</a>
                    </div>
                </h6>
            </div>
        </div>
        <% } else{ %>
            <div class="container" id="homeLogIn">
                <div id="home-survey-contained">
                    <div id="home-survey-login">
                        <h1>Hello
                            <%=displayName%>! Welcome to Survey13!</h1>
                        <h2 id="getStarted">Get started by clicking any of the links below!</h2>
                        <h6>
                            <div class="home-survey-button">
                                <a href="/surveys/create">Create a survey!</a>
                            </div>
                            <div class="home-survey-button">
                                <a href="/update/<%=id%>">Update Profile</a>
                            </div>
                        </h6>
                    </div>
                </div>
            </div>
            <% } %>
    </div>