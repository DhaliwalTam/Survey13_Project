<!-- Forgot password page -->
<div class="container">
    <% if(messages.length> 0) { %>
        <div id="messageArea" class="alert alert-danger">
            <%= messages %>
        </div>
        <% } %>
            <form id="forgotPass" method="POST">
                <div id="forgotPassForm">
                    <label>Enter your email (for security purposes):</label>
                    <input type="text" name="email" placeholder="Enter your email" required>
                    <br><br>
                    <label>Enter your new password:</label>
                    <input type="text" name="newPassword" placeholder="Enter password" value="" required>
                    <br><br>
                    <button type="submit">Change password</button>
                </div>
                
            </form>
</div>